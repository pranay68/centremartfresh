rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Admin-only uploads for bulk products
    match /bulk-products/uploads/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.token.admin == true;
      allow read: if false;
    }

    // Snapshots are not publicly readable; only admins
    match /bulk-products/snapshots/{fileName} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}




